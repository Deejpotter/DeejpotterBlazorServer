<section class="index-hero inset-background-left">
	<div class="container">
		<div class="container">
			<h1>@IndexName</h1>
			<p>@IndexDescription</p>
		</div>
	</div>
</section>

<section class="index-section">
	@foreach (var item in WorkItems)
	{
		<div class="index-card">
			<div class="container">
				<div class="">
					<h2>@item.Name</h2>
					<p>@item.Description</p>
				</div>
			</div>
			<a href="@item.Link">
				<i class="fa fa-chevron-right"></i>
			</a>
		</div>
	}
</section>